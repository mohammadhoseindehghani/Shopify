@page "/user/profile"
@model ProfileModel
@{
    Layout = "user/Shared/_UserLayout";
    ViewData["Title"] = "پروفایل کاربری";
}

<div class="container-fluid p-4">

    @if (!string.IsNullOrEmpty(Model.StatusMessage))
    {
        <div class="alert alert-@Model.StatusType alert-dismissible fade show rounded-4 shadow-sm mb-4" role="alert">
            @if (Model.StatusType == "success")
            {
                <i class="bi bi-check-circle-fill me-2"></i>
            }
            else
            {

                <i class="bi bi-exclamation-triangle-fill me-2"></i>
            }
            @Model.StatusMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-header bg-white py-3 border-bottom-0">
                    <h5 class="fw-bold text-gray-800 mb-0"><i class="bi bi-person-lines-fill me-2 text-primary"></i>ویرایش مشخصات</h5>
                </div>
                <div class="card-body p-4">
                    <form method="post" asp-page-handler="UpdateProfile">

                        <div class="d-flex align-items-center mb-4">
                            @if (!string.IsNullOrEmpty(Model.EditProfileInput.ImgUrl))
                            {
                                <img src="@Model.EditProfileInput.ImgUrl" class="rounded-circle border p-1" width="80" height="80" style="object-fit: cover;">
                            }
                            else
                            {
                                <div class="bg-primary-subtle text-primary rounded-circle d-flex align-items-center justify-content-center fw-bold fs-3" style="width: 80px; height: 80px;">
                                    @(Model.EditProfileInput.FirstName?.FirstOrDefault())
                                </div>
                            }
                            <div class="ms-3 flex-grow-1">
                                <label class="form-label text-sm text-muted">لینک تصویر پروفایل</label>
                                <input asp-for="EditProfileInput.ImgUrl" class="form-control bg-gray-50" placeholder="https://example.com/avatar.jpg">
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label text-sm text-gray-600">نام</label>
                                <input asp-for="EditProfileInput.FirstName" class="form-control bg-gray-50">
                                <span asp-validation-for="EditProfileInput.FirstName" class="text-danger text-xs"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label text-sm text-gray-600">نام خانوادگی</label>
                                <input asp-for="EditProfileInput.LastName" class="form-control bg-gray-50">
                                <span asp-validation-for="EditProfileInput.LastName" class="text-danger text-xs"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label text-sm text-gray-600">شماره موبایل</label>
                                <input asp-for="EditProfileInput.PhoneNumber" class="form-control bg-gray-50">
                                <span asp-validation-for="EditProfileInput.PhoneNumber" class="text-danger text-xs"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label text-sm text-gray-600">ایمیل</label>
                                <input asp-for="EditProfileInput.Email" type="email" class="form-control bg-gray-50">
                                <span asp-validation-for="EditProfileInput.Email" class="text-danger text-xs"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end mt-4">
                            <button type="submit" class="btn btn-primary rounded-pill px-4 shadow-sm">
                                <i class="bi bi-save me-1"></i> ذخیره تغییرات
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm rounded-4 mb-4 bg-primary text-white">
                <div class="card-body p-4 text-center">
                    <h6 class="opacity-75 mb-2">موجودی کیف پول</h6>
                    <h3 class="fw-bold mb-0">@Model.CurrentUser.Balance.ToString("N0") <span class="fs-6 fw-normal">تومان</span></h3>
                </div>
            </div>

            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-header bg-white py-3 border-bottom-0">
                    <h5 class="fw-bold text-gray-800 mb-0"><i class="bi bi-shield-lock me-2 text-warning"></i>تغییر رمز عبور</h5>
                </div>
                <div class="card-body p-4">
                    <form method="post" asp-page-handler="ChangePassword">
                        <div class="mb-3">
                            <label class="form-label text-sm text-gray-600">رمز عبور فعلی</label>
                            <input asp-for="ChangePasswordInput.CurrentPassword" type="password" class="form-control bg-gray-50">
                            <span asp-validation-for="ChangePasswordInput.CurrentPassword" class="text-danger text-xs"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label text-sm text-gray-600">رمز عبور جدید</label>
                            <input asp-for="ChangePasswordInput.NewPassword" type="password" class="form-control bg-gray-50">
                            <span asp-validation-for="ChangePasswordInput.NewPassword" class="text-danger text-xs"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label text-sm text-gray-600">تکرار رمز عبور جدید</label>
                            <input asp-for="ChangePasswordInput.ConfirmNewPassword" type="password" class="form-control bg-gray-50">
                            <span asp-validation-for="ChangePasswordInput.ConfirmNewPassword" class="text-danger text-xs"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-warning text-dark fw-bold rounded-pill shadow-sm">
                                بروزرسانی رمز عبور
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>