@page "/admin/products"
@model Shopify.Presentation.RazorPages.Pages.Area.Admin.Pages.ProductsModel
@{
    Layout = "Admin/Shared/_AdminLayout";
}

<div class="container-fluid p-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="fw-bold text-gray-800">مدیریت محصولات</h4>
        <button class="btn btn-info text-white rounded-pill px-4 shadow-sm fw-bold" data-bs-toggle="modal" data-bs-target="#addProductModal">
            <i class="bi bi-plus-lg me-1"></i> افزودن محصول جدید
        </button>
    </div>

    <div class="card border-0 shadow-sm rounded-4 mb-4">
        <div class="card-body p-3">
            <div class="row g-3">
                <div class="col-md-4">
                    <input type="text" class="form-control bg-gray-50 border-0" placeholder="جستجو در نام محصول...">
                </div>
                <div class="col-md-3">
                    <select class="form-select bg-gray-50 border-0">
                        <option>همه دسته‌بندی‌ها</option>
                        <option>کالای دیجیتال</option>
                        <option>پوشاک</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-secondary w-100">فیلتر</button>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="table-responsive">
            <table class="table align-middle table-hover mb-0">
                <thead class="bg-light text-secondary text-sm">
                    <tr>
                        <th class="py-3 ps-4">محصول</th>
                        <th class="py-3">دسته‌بندی</th>
                        <th class="py-3">قیمت (تومان)</th>
                        <th class="py-3 text-center">موجودی</th>
                        <th class="py-3 text-center">وضعیت</th>
                        <th class="py-3 text-end pe-4">عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="ps-4">
                            <div class="d-flex align-items-center">
                                <img src="https://via.placeholder.com/60" class="rounded-3 border me-3" width="50" height="50">
                                <div>
                                    <h6 class="mb-0 fw-bold text-gray-800 text-sm">گوشی سامسونگ S21</h6>
                                    <small class="text-muted text-xs">کد: DK-2030</small>
                                </div>
                            </div>
                        </td>
                        <td><span class="badge bg-light text-dark border">موبایل</span></td>
                        <td class="fw-bold text-cyan-700">25,000,000</td>
                        <td class="text-center">
                            <span class="d-block fw-bold">12</span>
                            <div class="progress" style="height: 4px; width: 60px; margin: 0 auto;">
                                <div class="progress-bar bg-success" role="progressbar" style="width: 70%"></div>
                            </div>
                        </td>
                        <td class="text-center">
                            <span class="badge bg-success-subtle text-success rounded-pill px-3">فعال</span>
                        </td>
                        <td class="text-end pe-4">
                            <button class="btn btn-sm btn-light text-primary border me-1" title="ویرایش"><i class="bi bi-pencil"></i></button>
                            <button class="btn btn-sm btn-light text-danger border" title="حذف"><i class="bi bi-trash"></i></button>
                        </td>
                    </tr>
                    <tr>
                        <td class="ps-4">
                            <div class="d-flex align-items-center">
                                <img src="https://via.placeholder.com/60" class="rounded-3 border me-3" width="50" height="50">
                                <div>
                                    <h6 class="mb-0 fw-bold text-gray-800 text-sm">هدفون سونی XM4</h6>
                                    <small class="text-muted text-xs">کد: DK-5500</small>
                                </div>
                            </div>
                        </td>
                        <td><span class="badge bg-light text-dark border">لوازم جانبی</span></td>
                        <td class="fw-bold text-cyan-700">12,000,000</td>
                        <td class="text-center">
                            <span class="d-block fw-bold text-danger">2</span>
                            <div class="progress" style="height: 4px; width: 60px; margin: 0 auto;">
                                <div class="progress-bar bg-danger" role="progressbar" style="width: 20%"></div>
                            </div>
                        </td>
                        <td class="text-center">
                            <span class="badge bg-danger-subtle text-danger rounded-pill px-3">ناموجود</span>
                        </td>
                        <td class="text-end pe-4">
                            <button class="btn btn-sm btn-light text-primary border me-1"><i class="bi bi-pencil"></i></button>
                            <button class="btn btn-sm btn-light text-danger border"><i class="bi bi-trash"></i></button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="card-footer bg-white py-3">
            <nav>
                <ul class="pagination justify-content-center mb-0 text-sm">
                    <li class="page-item disabled"><a class="page-link" href="#">قبلی</a></li>
                    <li class="page-item active"><a class="page-link bg-info border-info" href="#">1</a></li>
                    <li class="page-item"><a class="page-link text-info" href="#">2</a></li>
                    <li class="page-item"><a class="page-link text-info" href="#">3</a></li>
                    <li class="page-item"><a class="page-link text-info" href="#">بعدی</a></li>
                </ul>
            </nav>
        </div>
    </div>

</div>