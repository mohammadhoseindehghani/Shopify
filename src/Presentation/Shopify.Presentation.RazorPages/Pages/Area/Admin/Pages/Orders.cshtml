@page "/admin/orders"
@model Shopify.Presentation.RazorPages.Pages.Area.Admin.Pages.OrdersModel
@{
    Layout = "Admin/Shared/_AdminLayout";
}

<div class="container-fluid p-4">
    <h4 class="fw-bold text-gray-800 mb-4">لیست سفارشات</h4>

    <div class="card border-0 shadow-sm rounded-4 mb-4">
        <div class="card-body p-3">
            <div class="row g-3">
                <div class="col-md-4">
                    <input type="text" class="form-control bg-gray-50 border-0" placeholder="جستجو (شماره سفارش، نام کاربر)...">
                </div>
                <div class="col-md-3">
                    <select class="form-select bg-gray-50 border-0">
                        <option value="">همه وضعیت‌ها</option>
                        <option value="Pending">در انتظار پرداخت</option>
                        <option value="Processing">در حال پردازش</option>
                        <option value="Shipped">ارسال شده</option>
                        <option value="Cancelled">لغو شده</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-info text-white w-100 fw-bold">فیلتر</button>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-secondary">
                    <tr>
                        <th class="ps-4 py-3">شماره سفارش</th>
                        <th class="py-3">کاربر</th>
                        <th class="py-3">تاریخ ثبت</th>
                        <th class="py-3">مبلغ کل</th>
                        <th class="py-3 text-center">وضعیت</th>
                        <th class="py-3 text-end pe-4">عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Orders != null)
                    {
                        @foreach (var item in Model.Orders)
                        {
                            <tr>
                                <td class="ps-4 fw-bold">#@item.Id</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary-subtle text-primary rounded-circle d-flex justify-content-center align-items-center me-2" style="width:32px; height:32px">
                                            @item.UserFirstName.Substring(0, 1)
                                        </div>
                                        <span>@($"{item.UserFirstName} {item.UserLastName}")</span>
                                    </div>
                                </td>
                                <td class="text-muted text-sm">@item.CreatedAt.ToString("yyyy/MM/dd HH:mm")</td>
                                <td class="fw-bold text-gray-700">@item.TotalAmount.ToString("N0")</td>
                                <td class="text-center">
                                    @{
                                        var badgeClass = item.Status.ToString() switch
                                        {
                                            "Pending" => "bg-warning-subtle text-warning border-warning",
                                            "Processing" => "bg-info-subtle text-info border-info",
                                            "Shipped" => "bg-success-subtle text-success border-success",
                                            "Cancelled" => "bg-danger-subtle text-danger border-danger",
                                            _ => "bg-secondary-subtle text-secondary"
                                        };
                                    }
                                    <span class="badge @badgeClass border px-3 rounded-pill">@item.Status</span>
                                </td>
                                <td class="text-end pe-4">
                                    <button class="btn btn-sm btn-outline-primary rounded-pill px-3"
                                            onclick="showOrderDetails(@item.Id, '@($"{item.UserFirstName} {item.UserLastName}")', '@item.Status', '@item.TotalAmount.ToString("N0")')">
                                        جزئیات
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="orderDetailModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content rounded-4 border-0">
            <div class="modal-header border-bottom-0">
                <h5 class="modal-title fw-bold">جزئیات سفارش <span id="modalOrderId">#</span></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="bg-gray-50 p-3 rounded-3 mb-3 border">
                    <div class="row text-sm">
                        <div class="col-md-6 mb-2"><strong>تحویل گیرنده:</strong> <span id="modalUserName">...</span></div>
                        <div class="col-md-6 mb-2"><strong>وضعیت:</strong> <span id="modalStatus" class="fw-bold">...</span></div>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-bordered align-middle">
                        <thead class="bg-light">
                            <tr>
                                <th>محصول</th>
                                <th class="text-center">تعداد</th>
                                <th class="text-center">قیمت واحد</th>
                                <th class="text-center">جمع کل</th>
                            </tr>
                        </thead>
                        <tbody id="modalItemsBody">
                            <tr><td colspan="4" class="text-center">در حال بارگذاری...</td></tr>
                        </tbody>
                        <tfoot class="bg-gray-50">
                            <tr>
                                <td colspan="3" class="text-end fw-bold">مبلغ نهایی:</td>
                                <td class="text-center fw-bold text-cyan-700"><span id="modalTotalAmount">0</span> تومان</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4 border-top pt-3">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">بستن</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function formatMoney(amount) {
            return amount.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
        }

        async function showOrderDetails(orderId, userName, status, totalAmount) {
            document.getElementById('modalOrderId').innerText = '#' + orderId;
            document.getElementById('modalUserName').innerText = userName;
            document.getElementById('modalStatus').innerText = status;
            document.getElementById('modalTotalAmount').innerText = totalAmount;

            const modal = new bootstrap.Modal(document.getElementById('orderDetailModal'));
            modal.show();

            const tbody = document.getElementById('modalItemsBody');
            tbody.innerHTML = '<tr><td colspan="4" class="text-center text-muted py-4"><div class="spinner-border spinner-border-sm me-2"></div>در حال دریافت اطلاعات...</td></tr>';

            try {
                const response = await fetch(`?handler=OrderItems&orderId=${orderId}`);

                if (response.ok) {
                    const items = await response.json();
                    tbody.innerHTML = '';

                    items.forEach(item => {
                        let imgUrl = 'https://via.placeholder.com/40'; 

                        if (item.productImageUrl) {
                            imgUrl = item.productImageUrl.startsWith('/')
                                ? item.productImageUrl
                                : '/' + item.productImageUrl;
                        }

                        const row = `
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="${imgUrl}" class="rounded me-2" width="40" height="40" style="object-fit:cover">
                                        <span class="text-sm fw-bold">${item.productTitle}</span>
                                    </div>
                                </td>
                                <td class="text-center">${item.quantity}</td>
                                <td class="text-center">${formatMoney(item.unitPrice)}</td>
                                <td class="text-center fw-bold">${formatMoney(item.totalPrice)}</td>
                            </tr>
                        `;
                        tbody.innerHTML += row;
                    });
                } else {
                    tbody.innerHTML = '<tr><td colspan="4" class="text-center text-danger">خطا در دریافت اطلاعات</td></tr>';
                }
            } catch (error) {
                console.error(error);
                tbody.innerHTML = '<tr><td colspan="4" class="text-center text-danger">خطای شبکه</td></tr>';
            }
        }
    </script>
}