@page "/admin/users"
@model Shopify.Presentation.RazorPages.Pages.Area.Admin.Pages.UsersModel
@using Shopify.Domain.Core.UserAgg.Enums
@{
    Layout = "Admin/Shared/_AdminLayout";
}

<div class="container-fluid p-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="fw-bold text-gray-800 mb-0">مدیریت کاربران</h4>
        <button class="btn btn-primary rounded-pill px-4 shadow-sm" onclick="new bootstrap.Modal(document.getElementById('addUserModal')).show()">
            <i class="bi bi-person-plus-fill me-2"></i>کاربر جدید
        </button>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-secondary">
                    <tr>
                        <th class="ps-4 py-3">کاربر</th>
                        <th class="py-3">اطلاعات تماس</th>
                        <th class="py-3">موجودی</th>
                        <th class="py-3 text-center">نقش</th>
                        <th class="py-3 text-center">وضعیت</th>
                        <th class="py-3 text-end pe-4">عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Users != null)
                    {
                        @foreach (var user in Model.Users)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary-subtle text-primary rounded-circle d-flex align-items-center justify-content-center fw-bold me-3" style="width: 40px; height: 40px;">
                                            @(string.IsNullOrEmpty(user.FirstName) ? "?" : user.FirstName.Substring(0, 1))
                                        </div>
                                        <div>
                                            <h6 class="mb-0 fw-bold text-gray-800">@($"{user.FirstName} {user.LastName}")</h6>
                                            <small class="text-muted">ID: @user.Id</small>
                                        </div>
                                    </div>
                                </td>
                                <td class="text-muted text-sm"><span>@user.Phone</span></td>
                                <td class="fw-bold text-success">@user.Balance.ToString("N0") <span class="text-xs text-muted">تومان</span></td>
                                <td class="text-center">
                                    <span class="badge @(user.Role == RoleEnum.Admin ? "bg-indigo-100 text-indigo-700" : "bg-gray-100 text-gray-700") border px-3 rounded-pill">
                                        @user.Role
                                    </span>
                                </td>
                                <td class="text-center">
                                    <span class="badge @(user.IsActive ? "bg-success-subtle text-success" : "bg-danger-subtle text-danger") border px-3 rounded-pill">
                                        @(user.IsActive ? "فعال" : "غیرفعال")
                                    </span>
                                </td>
                                <td class="text-end pe-4">
                                    <button class="btn btn-sm btn-outline-primary rounded-pill px-3 me-1"
                                            onclick="openChargeModal(@user.Id, '@($"{user.FirstName} {user.LastName}")', @user.Balance)">
                                        شارژ
                                    </button>

                                    <div class="btn-group">
                                        <button type="button" class="btn btn-sm btn-light border rounded-circle" data-bs-toggle="dropdown"><i class="bi bi-three-dots-vertical"></i></button>
                                        <ul class="dropdown-menu dropdown-menu-end shadow border-0">
                                            <li>
                                                <button class="dropdown-item" onclick="openRoleModal(@user.Id, '@($"{user.FirstName} {user.LastName}")', '@user.Role')">
                                                    <i class="bi bi-person-gear me-2 text-warning"></i>تغییر نقش
                                                </button>
                                            </li>
                                            <li>
                                                <a asp-page="./UserDetails" asp-route-id="@user.Id" class="dropdown-item">
                                                    <i class="bi bi-person-gear me-2 text-warning"></i>نمایش توضیحات
                                                </a>
                                            </li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li>
                                                <form method="post" asp-page-handler="ToggleStatus">
                                                    <input type="hidden" name="userId" value="@user.Id" />
                                                    <input type="hidden" name="isActive" value="@user.IsActive.ToString()" />
                                                    <button type="submit" class="dropdown-item @(user.IsActive ? "text-danger" : "text-success")">
                                                        @(user.IsActive ? "مسدود کردن" : "فعال‌سازی")
                                                    </button>
                                                </form>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="changeRoleModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 border-0">
            <div class="modal-header border-bottom-0">
                <h5 class="modal-title fw-bold">تغییر نقش کاربر</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-page-handler="ChangeRole">
                <div class="modal-body">
                    <input type="hidden" name="userId" id="roleUserId">
                    <div class="alert alert-warning border-0 mb-3">
                        تغییر نقش برای: <strong id="roleUserName">...</strong>
                    </div>
                    <label class="form-label text-sm fw-bold">نقش جدید:</label>
                    <select name="newRole" id="roleSelect" class="form-select bg-gray-50">
                        <option value="Customer">مشتری (Customer)</option>
                        <option value="Admin">مدیر (Admin)</option>
                    </select>
                </div>
                <div class="modal-footer border-top-0">
                    <button type="button" class="btn btn-light rounded-pill" data-bs-dismiss="modal">انصراف</button>
                    <button type="submit" class="btn btn-warning rounded-pill px-4">ذخیره</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="editBalanceModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 border-0">
            <div class="modal-header border-bottom-0">
                <h5 class="modal-title fw-bold">افزایش موجودی</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-page-handler="ChargeWallet">
                <div class="modal-body">
                    <input type="hidden" name="userId" id="chargeUserId">
                    <div class="alert alert-info border-0 mb-3">
                        کاربر: <strong id="chargeUserName">...</strong> | موجودی: <strong id="chargeCurrentBalance">0</strong>
                    </div>
                    <input type="number" name="amount" class="form-control bg-gray-50 text-center fw-bold fs-5" placeholder="مبلغ (تومان)" required>
                </div>
                <div class="modal-footer border-top-0">
                    <button type="button" class="btn btn-light rounded-pill" data-bs-dismiss="modal">انصراف</button>
                    <button type="submit" class="btn btn-success text-white rounded-pill px-4">ثبت</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="addUserModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 border-0">
            <div class="modal-header border-bottom-0">
                <h5 class="modal-title fw-bold">افزودن کاربر جدید</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-page-handler="AddUser">
                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-6"><input name="NewUser.FirstName" class="form-control bg-gray-50" placeholder="نام" required></div>
                        <div class="col-6"><input name="NewUser.LastName" class="form-control bg-gray-50" placeholder="نام خانوادگی" required></div>
                        <div class="col-12"><input name="NewUser.Phone" class="form-control bg-gray-50" placeholder="موبایل" required></div>
                        <div class="col-12"><input name="NewUser.Password" type="password" class="form-control bg-gray-50" placeholder="کلمه عبور" required></div>
                    </div>
                </div>
                <div class="modal-footer border-top-0">
                    <button type="button" class="btn btn-light rounded-pill" data-bs-dismiss="modal">انصراف</button>
                    <button type="submit" class="btn btn-primary rounded-pill px-4">ایجاد</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function openChargeModal(userId, userName, currentBalance) {
            document.getElementById('chargeUserId').value = userId;
            document.getElementById('chargeUserName').innerText = userName;
            document.getElementById('chargeCurrentBalance').innerText = currentBalance.toLocaleString();
            new bootstrap.Modal(document.getElementById('editBalanceModal')).show();
        }

        function openRoleModal(userId, userName, currentRole) {
            document.getElementById('roleUserId').value = userId;
            document.getElementById('roleUserName').innerText = userName;
            document.getElementById('roleSelect').value = currentRole;
            new bootstrap.Modal(document.getElementById('changeRoleModal')).show();
        }
    </script>
}