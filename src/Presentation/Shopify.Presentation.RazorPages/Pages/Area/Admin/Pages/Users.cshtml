@page "/admin/users"
@model Shopify.Presentation.RazorPages.Pages.Area.Admin.Pages.UsersModel
@{
    Layout = "Admin/Shared/_AdminLayout";
}



<div class="container-fluid p-4">
    <h4 class="fw-bold text-gray-800 mb-4">لیست کاربران سیستم</h4>

    <div class="card border-0 shadow-sm rounded-4 mb-4">
        <div class="card-body p-3">
            <div class="input-group">
                <span class="input-group-text bg-white border-0"><i class="bi bi-search"></i></span>
                <input type="text" class="form-control border-0 bg-light rounded-pill" placeholder="جستجو بر اساس نام کاربری یا شماره تماس...">
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-secondary">
                    <tr>
                        <th class="ps-4 py-3">کاربر</th>
                        <th class="py-3">تاریخ ثبت‌نام</th>
                        <th class="py-3">موجودی کیف پول</th>
                        <th class="py-3 text-center">وضعیت</th>
                        <th class="py-3 text-end pe-4">عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="ps-4">
                            <div class="d-flex align-items-center">
                                <div class="bg-primary-subtle text-primary rounded-circle d-flex align-items-center justify-content-center fw-bold me-3" style="width: 40px; height: 40px;">
                                    A
                                </div>
                                <div>
                                    <h6 class="mb-0 fw-bold text-gray-800">ali_rezaei</h6>
                                    <small class="text-muted">ID: 105</small>
                                </div>
                            </div>
                        </td>
                        <td class="text-muted text-sm">1402/05/20</td>
                        <td class="fw-bold text-success">5,000,000 <span class="text-xs text-muted">تومان</span></td>
                        <td class="text-center"><span class="badge bg-success-subtle text-success border border-success px-3 rounded-pill">فعال</span></td>
                        <td class="text-end pe-4">
                            <button class="btn btn-sm btn-outline-primary rounded-pill px-3 me-1" data-bs-toggle="modal" data-bs-target="#editBalanceModal">شارژ حساب</button>
                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-light border rounded-circle" data-bs-toggle="dropdown"><i class="bi bi-three-dots-vertical"></i></button>
                                <ul class="dropdown-menu dropdown-menu-end shadow border-0">
                                    <li><a class="dropdown-item" href="#">مشاهده سفارشات</a></li>
                                    <li><a class="dropdown-item text-danger" href="#">مسدود کردن کاربر</a></li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td class="ps-4">
                            <div class="d-flex align-items-center">
                                <div class="bg-secondary-subtle text-secondary rounded-circle d-flex align-items-center justify-content-center fw-bold me-3" style="width: 40px; height: 40px;">
                                    M
                                </div>
                                <div>
                                    <h6 class="mb-0 fw-bold text-gray-800">mmd_gamer</h6>
                                    <small class="text-muted">ID: 108</small>
                                </div>
                            </div>
                        </td>
                        <td class="text-muted text-sm">1402/06/10</td>
                        <td class="fw-bold text-gray-500">20,000 <span class="text-xs text-muted">تومان</span></td>
                        <td class="text-center"><span class="badge bg-danger-subtle text-danger border border-danger px-3 rounded-pill">مسدود</span></td>
                        <td class="text-end pe-4">
                            <button class="btn btn-sm btn-outline-primary rounded-pill px-3 me-1" disabled>شارژ حساب</button>
                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-light border rounded-circle" data-bs-toggle="dropdown"><i class="bi bi-three-dots-vertical"></i></button>
                                <ul class="dropdown-menu dropdown-menu-end shadow border-0">
                                    <li><a class="dropdown-item" href="#">مشاهده سفارشات</a></li>
                                    <li><a class="dropdown-item text-success" href="#">رفع مسدودی</a></li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

