@page
@model Shopify.Presentation.RazorPages.Pages.Area.Admin.Pages.AttributesModel
@{
    Layout = "Admin/Shared/_AdminLayout";
}

<div class="container-fluid p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="fw-bold text-gray-800">ویژگی‌های محصولات (Attributes)</h4>
        <button class="btn btn-info text-white rounded-pill px-4 shadow-sm fw-bold" data-bs-toggle="modal" data-bs-target="#addAttributeModal">
            <i class="bi bi-plus-lg me-1"></i> ویژگی جدید
        </button>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light text-secondary">
                                <tr>
                                    <th class="ps-4 py-3">نام ویژگی</th>
                                    <th class="py-3">نوع نمایش</th>
                                    <th class="py-3">دسته‌بندی‌های مرتبط</th>
                                    <th class="text-end pe-4 py-3">عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="ps-4 fw-bold">رنگ (Color)</td>
                                    <td><span class="badge bg-secondary">انتخاب رنگ</span></td>
                                    <td><span class="text-muted text-sm">موبایل، پوشاک</span></td>
                                    <td class="text-end pe-4">
                                        <button class="btn btn-sm btn-light border text-primary"><i class="bi bi-pencil"></i></button>
                                        <button class="btn btn-sm btn-light border text-danger"><i class="bi bi-trash"></i></button>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="ps-4 fw-bold">حافظه داخلی</td>
                                    <td><span class="badge bg-secondary">متن کوتاه</span></td>
                                    <td><span class="text-muted text-sm">موبایل، لپ‌تاپ</span></td>
                                    <td class="text-end pe-4">
                                        <button class="btn btn-sm btn-light border text-primary"><i class="bi bi-pencil"></i></button>
                                        <button class="btn btn-sm btn-light border text-danger"><i class="bi bi-trash"></i></button>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="ps-4 fw-bold">سایز لباس</td>
                                    <td><span class="badge bg-secondary">لیست کشویی</span></td>
                                    <td><span class="text-muted text-sm">پوشاک</span></td>
                                    <td class="text-end pe-4">
                                        <button class="btn btn-sm btn-light border text-primary"><i class="bi bi-pencil"></i></button>
                                        <button class="btn btn-sm btn-light border text-danger"><i class="bi bi-trash"></i></button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>