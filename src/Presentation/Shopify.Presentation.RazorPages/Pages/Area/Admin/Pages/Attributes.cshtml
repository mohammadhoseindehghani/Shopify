@page "/admin/attributes"
@model Shopify.Presentation.RazorPages.Pages.Area.Admin.Pages.AttributesModel
@{
    Layout = "Admin/Shared/_AdminLayout";
}

<div class="container-fluid p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="fw-bold text-gray-800">ویژگی‌های محصولات (Attributes)</h4>
        <button class="btn btn-info text-white rounded-pill px-4 shadow-sm fw-bold" onclick="new bootstrap.Modal(document.getElementById('addAttributeModal')).show()">
            <i class="bi bi-plus-lg me-1"></i> ویژگی جدید
        </button>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light text-secondary">
                                <tr>
                                    <th class="ps-4 py-3">نام ویژگی</th>
                                    <th class="text-end pe-4 py-3">عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Attributes != null)
                                {
                                    @foreach (var attr in Model.Attributes)
                                    {
                                        <tr>
                                            <td class="ps-4 fw-bold">@attr.Name</td>

                                            <td class="text-end pe-4">
                                                <button class="btn btn-sm btn-light border text-primary me-1"
                                                        onclick="openEditModal(@attr.Id, '@attr.Name')">
                                                    <i class="bi bi-pencil"></i>
                                                </button>

                                                <form method="post" asp-page-handler="Delete" class="d-inline" onsubmit="return confirm('آیا از حذف این ویژگی مطمئن هستید؟');">
                                                    <input type="hidden" name="id" value="@attr.Id" />
                                                    <button type="submit" class="btn btn-sm btn-light border text-danger">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="addAttributeModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 border-0">
            <div class="modal-header border-bottom-0">
                <h5 class="modal-title fw-bold">تعریف ویژگی جدید</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-page-handler="Add">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label text-sm text-gray-600">عنوان ویژگی</label>
                        <input name="NewAttributeName" class="form-control bg-gray-50" placeholder="مثلا: رنگ، سایز، جنس" required>
                    </div>
                </div>
                <div class="modal-footer border-top-0">
                    <button type="button" class="btn btn-light rounded-pill" data-bs-dismiss="modal">انصراف</button>
                    <button type="submit" class="btn btn-info text-white rounded-pill px-4">ذخیره ویژگی</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="editAttributeModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 border-0">
            <div class="modal-header border-bottom-0">
                <h5 class="modal-title fw-bold">ویرایش ویژگی</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-page-handler="Update">
                <div class="modal-body">
                    <input type="hidden" name="id" id="editId">
                    <div class="mb-3">
                        <label class="form-label text-sm text-gray-600">عنوان ویژگی</label>
                        <input name="name" id="editName" class="form-control bg-gray-50" required>
                    </div>
                </div>
                <div class="modal-footer border-top-0">
                    <button type="button" class="btn btn-light rounded-pill" data-bs-dismiss="modal">انصراف</button>
                    <button type="submit" class="btn btn-warning rounded-pill px-4">بروزرسانی</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function openEditModal(id, name) {
            document.getElementById('editId').value = id;
            document.getElementById('editName').value = name;
            new bootstrap.Modal(document.getElementById('editAttributeModal')).show();
        }
    </script>
}