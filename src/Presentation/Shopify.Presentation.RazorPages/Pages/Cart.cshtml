@page
@model Shopify.Presentation.RazorPages.Pages.CartModel
@{
    Layout = "Shared/_ShopLayout";
}

<div class="container mb-5 flex-grow-1 mt-5">

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden mb-3">
                <div class="card-header bg-white py-3 border-bottom-0">
                    <h6 class="mb-0 fw-bold text-gray-700">اقلام انتخابی (۲ کالا)</h6>
                </div>
                <div class="table-responsive">
                    <table class="table align-middle mb-0">
                        <thead class="bg-gray-50 text-secondary text-sm">
                            <tr>
                                <th class="py-3 px-4 border-0 w-50">محصول</th>
                                <th class="py-3 text-center border-0">تعداد</th>
                                <th class="py-3 text-center border-0">قیمت کل</th>
                                <th class="py-3 border-0"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="px-4 py-4">
                                    <div class="d-flex align-items-center">
                                        <img src="https://via.placeholder.com/80" class="rounded-3 border me-3" width="70" height="70">
                                        <div>
                                            <h6 class="mb-1 fw-bold text-gray-800">لپ‌تاپ مک‌بوک پرو M2</h6>
                                            <small class="text-muted d-block mb-1">گارانتی ۱۸ ماهه</small>
                                            <span class="text-cyan-700 fw-bold text-sm">82,500,000 تومان</span>
                                        </div>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <div class="d-inline-flex border rounded-pill px-2 py-1 align-items-center bg-white shadow-sm">
                                        <button class="btn btn-sm p-0 text-muted hover:text-dark"><i class="bi bi-dash"></i></button>
                                        <span class="mx-3 fw-bold text-sm">1</span>
                                        <button class="btn btn-sm p-0 text-muted hover:text-dark"><i class="bi bi-plus"></i></button>
                                    </div>
                                </td>
                                <td class="text-center fw-bold text-gray-700">82,500,000</td>
                                <td class="text-end px-4">
                                    <button class="btn btn-link text-danger p-0 hover:scale-110 transition-transform"><i class="bi bi-x-circle fs-5"></i></button>
                                </td>
                            </tr>
                            <tr>
                                <td class="px-4 py-4">
                                    <div class="d-flex align-items-center">
                                        <img src="https://via.placeholder.com/80" class="rounded-3 border me-3" width="70" height="70">
                                        <div>
                                            <h6 class="mb-1 fw-bold text-gray-800">موس بی‌سیم لاجیتک</h6>
                                            <small class="text-muted d-block mb-1">رنگ مشکی</small>
                                            <span class="text-cyan-700 fw-bold text-sm">2,000,000 تومان</span>
                                        </div>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <div class="d-inline-flex border rounded-pill px-2 py-1 align-items-center bg-white shadow-sm">
                                        <button class="btn btn-sm p-0 text-muted hover:text-dark"><i class="bi bi-dash"></i></button>
                                        <span class="mx-3 fw-bold text-sm">2</span>
                                        <button class="btn btn-sm p-0 text-muted hover:text-dark"><i class="bi bi-plus"></i></button>
                                    </div>
                                </td>
                                <td class="text-center fw-bold text-gray-700">4,000,000</td>
                                <td class="text-end px-4">
                                    <button class="btn btn-link text-danger p-0 hover:scale-110 transition-transform"><i class="bi bi-x-circle fs-5"></i></button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <a href="index.html" class="text-decoration-none text-muted text-sm fw-bold">
                <i class="bi bi-arrow-right me-1"></i> بازگشت به فروشگاه و خرید بیشتر
            </a>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm rounded-4 position-sticky" style="top: 20px;">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-4 text-gray-800">خلاصه سبد</h5>

                    <div class="d-flex justify-content-between mb-3 text-secondary text-sm">
                        <span>قیمت کالاها (۳)</span>
                        <span>86,500,000 تومان</span>
                    </div>
                    <div class="d-flex justify-content-between mb-3 text-secondary text-sm">
                        <span>سود شما از خرید</span>
                        <span class="text-danger">0 تومان</span>
                    </div>

                    <hr class="border-dashed my-3">

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <span class="fw-bold fs-6">جمع سبد خرید</span>
                        <span class="fw-bold fs-5 text-gray-900">86,500,000 <span class="fs-7 text-muted fw-normal">تومان</span></span>
                    </div>

                    <a href="checkout.html" class="btn primary-gradient text-white w-100 rounded-pill py-3 fw-bold shadow-md hover:shadow-lg transition-all d-flex justify-content-center align-items-center">
                        ادامه جهت تسویه حساب <i class="bi bi-arrow-left ms-2"></i>
                    </a>

                    <p class="text-muted text-center text-xs mt-3 mb-0">
                        هزینه ارسال در مرحله بعد محاسبه می‌شود.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>