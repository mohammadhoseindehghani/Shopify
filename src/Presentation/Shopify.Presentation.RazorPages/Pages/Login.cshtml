@page
@model Shopify.Presentation.RazorPages.Pages.LoginModel
@{
    Layout = "Shared/_ShopLayout";
}

<div class="container d-flex justify-content-center mt-5">
    <div class="auth-card">
        <div class="text-center mb-4">
            <div class="d-inline-flex align-items-center justify-content-center bg-white rounded-circle shadow-sm p-3 mb-3" style="width: 80px; height: 80px;">
                <i class="bi bi-person-circle fs-1 text-cyan-600"></i>
            </div>
            <h4 class="fw-bold text-gray-800">خوش آمدید!</h4>
            <p class="text-muted text-sm">لطفاً وارد حساب کاربری خود شوید</p>
        </div>

        <div class="card border-0 shadow-lg rounded-4 overflow-hidden bg-white">
            <div class="card-body p-4 p-md-5">
                <form action="#" method="POST">
                    <div class="mb-3">
                        <label for="username" class="form-label text-gray-600 text-sm fw-bold">نام کاربری</label>
                        <div class="input-group">
                            <span class="input-group-text bg-gray-50 border-end-0"><i class="bi bi-envelope text-gray-400"></i></span>
                            <input type="text" class="form-control bg-gray-50 border-start-0" id="username" placeholder="user123" required>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label text-gray-600 text-sm fw-bold">رمز عبور</label>
                        <div class="input-group">
                            <span class="input-group-text bg-gray-50 border-end-0"><i class="bi bi-lock text-gray-400"></i></span>
                            <input type="password" class="form-control bg-gray-50 border-start-0 border-end-0" id="password" placeholder="••••••••" required>
                            <button class="btn btn-outline-secondary bg-gray-50 border-start-0 text-gray-400" type="button" id="togglePassword">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="rememberMe">
                            <label class="form-check-label text-sm text-gray-600" for="rememberMe">مرا به خاطر بسپار</label>
                        </div>
                        <a href="#" class="text-decoration-none text-cyan-600 text-sm fw-bold hover:text-cyan-800">رمز را فراموش کردم</a>
                    </div>

                    <button type="submit" class="btn primary-gradient text-white w-100 rounded-pill py-2 fw-bold shadow-md hover:shadow-lg transition-all mb-3">
                        ورود به سیستم
                    </button>
                </form>

                <div class="position-relative text-center my-4">
                    <hr class="text-gray-300">
                    <span class="position-absolute top-50 start-50 translate-middle bg-white px-3 text-muted text-xs">یا</span>
                </div>

                <div class="text-center">
                    <span class="text-muted text-sm">حساب کاربری ندارید؟</span>
                    <a href="register.html" class="text-cyan-700 fw-bold text-decoration-none ms-1">ثبت‌نام کنید</a>
                </div>
            </div>
        </div>

        <div class="text-center mt-4">
            <a href="index.html" class="text-decoration-none text-gray-500 text-sm"><i class="bi bi-arrow-right me-1"></i>بازگشت به صفحه اصلی</a>
        </div>
    </div>
</div>
