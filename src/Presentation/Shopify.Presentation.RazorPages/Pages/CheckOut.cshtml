@page
@model Shopify.Presentation.RazorPages.Pages.CheckOutModel
@{
    Layout = "Shared/_ShopLayout";
}

<div class="container mb-5 flex-grow-1">

    @if (!ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @Html.ValidationSummary(false)
        </div>
    }

    <div class="row g-4">
        <div class="col-lg-8">

            <div class="card border-0 shadow-sm rounded-4 mb-4">
                <div class="card-header bg-white py-3">
                    <h6 class="mb-0 fw-bold text-gray-700"><i class="bi bi-wallet2 me-2 text-cyan-600"></i>وضعیت کیف پول</h6>
                </div>
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center bg-gray-50 p-3 rounded-3 border mb-3">
                        <span class="text-muted">موجودی فعلی حساب شما:</span>
                        <span class="fw-bold text-success fs-5">@Model.UserBalance.ToString("N0") تومان</span>
                    </div>

                    <div class="d-flex flex-column gap-2 text-sm">
                        <div class="d-flex justify-content-between text-muted">
                            <span>مبلغ قابل پرداخت:</span>
                            <span>@Model.PayableAmount.ToString("N0") -</span>
                        </div>
                        <hr class="my-1">
                        <div class="d-flex justify-content-between fw-bold">
                            <span>مانده حساب پس از خرید:</span>
                            @if (Model.HasSufficientBalance)
                            {
                                <span class="text-gray-800">@Model.RemainingBalance.ToString("N0") تومان</span>
                            }
                            else
                            {
                                <span class="text-danger">کسری موجودی (@Math.Abs(Model.RemainingBalance).ToString("N0"))</span>
                            }
                        </div>
                    </div>

                    @if (!Model.HasSufficientBalance)
                    {
                        <div class="alert alert-danger d-flex align-items-center mt-3" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            <div>موجودی حساب شما برای انجام این خرید کافی نیست. لطفاً حساب خود را شارژ کنید.</div>
                        </div>
                    }
                </div>
            </div>

            <div class="card border-0 shadow-sm rounded-4 mb-4">
                <div class="card-body p-4">
                    <h6 class="fw-bold mb-3 text-gray-700">تحویل گیرنده</h6>
                    <div class="d-flex align-items-center">
                        <div class="bg-gray-200 rounded-circle p-3 me-3 text-gray-600"><i class="bi bi-person-fill fs-4"></i></div>
                        <div>
                            <div class="fw-bold">@Model.UserFullName</div>
                            <div class="text-muted text-sm">کاربر سیستم</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-between align-items-center">
                <a href="/Cart" class="text-decoration-none text-muted fw-bold"><i class="bi bi-arrow-right me-1"></i> بازگشت به سبد خرید</a>

                @if (Model.HasSufficientBalance)
                {
                    <form method="post" asp-page-handler="Pay">
                        <button type="submit" class="btn primary-gradient text-white rounded-pill px-5 py-3 fw-bold shadow-md hover:shadow-lg transition-all">
                            <i class="bi bi-check-circle-fill me-2"></i> کسر از حساب و ثبت نهایی
                        </button>
                    </form>
                }
                else
                {
                    <button class="btn btn-secondary rounded-pill px-5 py-3 fw-bold" disabled>
                        موجودی کافی نیست
                    </button>
                }
            </div>

        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm rounded-4 bg-gray-50">
                <div class="card-body p-4">
                    <h6 class="fw-bold mb-4 text-gray-700">مرور سفارش</h6>

                    <div class="d-flex flex-column gap-3 mb-4">
                        @foreach (var item in Model.Cart.Items)
                        {
                            <div class="d-flex align-items-center">
                                <img src="@item.ImageUrl" class="rounded border me-2 bg-white" width="50" height="50">
                                <div class="flex-grow-1 overflow-hidden">
                                    <h6 class="text-sm fw-bold mb-0 text-truncate">@item.ProductTitle</h6>
                                    <small class="text-muted">@item.Quantity عدد</small>
                                </div>
                                <span class="text-sm fw-bold">@((item.Quantity * item.UnitPrice).ToString("N0"))</span>
                            </div>
                        }
                    </div>

                    <hr>

                    <div class="d-flex justify-content-between align-items-center">
                        <span class="text-muted text-sm">مبلغ کل فاکتور</span>
                        <span class="fw-bold fs-5 text-cyan-700">@Model.PayableAmount.ToString("N0") <span class="text-xs text-muted">تومان</span></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>